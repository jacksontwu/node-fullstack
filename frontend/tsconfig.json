{
  "compilerOptions": {
    "target": "esnext", // 指定编译后的版本目录
    "module": "esnext", // 指定要使用的模版标准
    "lib": [ // 指定包含在编译中的库文件
      "es6",
      "dom"
    ],
    "allowJs": true, // 指定是否允许编辑js文件，默认false不编译
    "checkJs": true, // 指定是否检查和报告js文件中的错误，默认为false
    "strict": true,
    "jsx": "preserve", // jsx代码的开发环境：preserve、react-native、react
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "sourceRoot": "",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  }
}